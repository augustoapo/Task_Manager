<div class="container">
<h1 class = "d-flex justify-content-center">List of Tasks</h1>


<ul class="list-group">
<% @tasks.each do |task| %>
  <li class="list-group-item" ><% if task.completed  %>
  <i class="fas fa-check-square"></i>
  <% else %>
  <i class="far fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task) %></li>
<% end %>
</ul>
<br>
<p><%= link_to 'Create Task', new_task_path, class: "btn btn-primary" %></p>

</div>